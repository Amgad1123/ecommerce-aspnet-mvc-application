<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online_store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Online_store.styles.css" asp-append-version="true" />
    <style>
        /* Custom Navbar Style */
        .navbar {
            background-color: #8b572a; /* Brown navbar background */
        }

        .navbar-brand {
            color: #fff !important; /* White color for navbar brand */
            font-weight: bold; /* Bold font weight */
        }

        .navbar-toggler {
            border-color: #fff; /* White color for toggler border */
        }

        .navbar-nav .nav-item .nav-link {
            color: #fff !important; /* White color for navbar links */
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #f8f9fa !important; /* Light gray color on hover */
            }
        /* Style for the logo */
        .navbar-logo {
            max-height: 40px; /* Adjust the height as needed */
        }

        .navbar {
            background-color: #8b572a; /* Brown navbar background */
        }

        .navbar-brand {
            color: #fff !important; /* White color for navbar brand */
            font-weight: bold; /* Bold font weight */
        }

        .navbar-toggler {
            border-color: #fff; /* White color for toggler border */
        }

        .navbar-nav .nav-item .nav-link {
            color: #fff !important; /* White color for navbar links */
        }

            .navbar-nav .nav-item .nav-link:hover {
                color: #f8f9fa !important; /* Light gray color on hover */
            }

        /* Style for the logo */
        .navbar-logo {
            max-height: 40px; /* Adjust the height as needed */
        }

        /* Footer Style */
        .footer {
            background-color: #8b572a; /* Brown footer background */
            color: #fff; /* White text color */
            text-align: center; /* Center align text */
            padding: 10px 0; /* Padding for top and bottom */
            position: absolute; /* Position the footer */
            width: 100%; /* Full width */
            bottom: 0; /* Stick it to the bottom */
        }

            .footer a {
                color: #f8f9fa; /* Light gray color for links */
                margin: 0 10px; /* Add spacing around links */
            }

                .footer a:hover {
                    color: #fff; /* White color on hover */
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <img src="~/images/Nutri-ActiveLogo.png" class="navbar-logo mr-2" alt="Logo">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> NutriActive Supplements</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @await Html.PartialAsync("LoginPartial")
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container" style="color: white;">
            &copy; 2024 - NutriActive -
            <a href="https://github.com/Amgad1123/ecommerce-aspnet-mvc-application" target="_blank" rel="noopener noreferrer">GitHub</a> -
            <a href="https://twitter.com/nutriactivecorp" target="_blank" rel="noopener noreferrer">Twitter</a> -
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -
            <a asp-area="" asp-controller="Home" asp-action="Login">Login</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
