@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "All Products";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-color: #d2b48c; 
            color: #2e2d2c; 
            font-family: Arial, sans-serif; 
            padding: 20px; 
        }

        h1 {
            text-align: center; 
            margin-bottom: 30px;
        }

        table {
            width: 100%; 
            border-collapse: collapse; 
            margin-bottom: 20px; 
        }

        th, td {
            border: 1px solid #8b572a; 
            padding: 8px; 
            text-align: left;
        }

        th {
            background-color: #8b572a; 
            color: #fff; 
        }

        input[type="text"] {
            padding: 8px; 
            border: 1px solid #8b572a; 
            border-radius: 5px; 
            margin-right: 10px;
        }

        button[type="submit"] {
            background-color: #8b572a;
            color: #fff; 
            border: none; 
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #634329;
            }

        .align-middle {
            vertical-align: middle;
        }

        .sale-container {
            background-color: #634329;
            padding: 9%;
            max-width: 30%;
            height: calc(100vh - 250px);
            position: absolute;
            border: 10px solid #D2B48C;
            box-sizing: border-box;
        }

        .left {
            left: 0;
        }

        .right {
            right: 0;
        }
    </style>
</head>
<body>

    <h1 style="color: white;">@ViewData["Title"]</h1>

    <div class="sale-container left"></div>
    <div class="sale-container right"></div>

    <div class="row">
        <div class="col-md-8 offset-md-2">

            <tbody>
                <tr>
                    <td colspan="5">
                        <form asp-controller="Product" asp-action="Details" method="get">
                            <input type="text" name="searchString" placeholder="Search Products">
                            <button type="submit">Search</button>
                        </form>
                    </td>
                </tr>
            </tbody>

            <hr />

            <table>
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Stock Availability</th>
                        <th>Actions (to be implemented)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Price)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.QuantityInStock)</td>

                            @{
                                string itemNameWithoutSpaces = item.Name.Replace(" ", ""); // Replace spaces with no space
                                                                                           // string itemNameWithoutSpaces = item.Name.Replace(" ", "_"); // Replace spaces with underscore
                            }
                            <td class="align-middle">
                                <form action="/Products/@itemNameWithoutSpaces" method="GET">
                                    <button type="submit" class="btn btn-primary">View Details</button>
                                </form>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>

            <hr />

        </div>
    </div>

</body>
</html>
