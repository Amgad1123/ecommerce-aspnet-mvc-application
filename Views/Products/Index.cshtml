@model IEnumerable<ProductModel>

@{
    ViewData["Title"] = "List of Products";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #FDFDFD;
            margin: 0;
            padding: 0;
        }

        h1 {
            text-align: center;
            margin-top: 20px;
            color: #4A312C; /* Brown/Mocha color */
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            border: 1px solid #CCCCCC;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #4A312C; /* Brown/Mocha color */
            color: white;
        }

        form {
            margin-top: 20px;
            text-align: center;
        }

        input[type="text"] {
            padding: 8px;
            border: 1px solid #CCCCCC;
            border-radius: 5px;
            width: 200px;
        }

        button[type="submit"] {
            background-color: #4A312C; /* Brown/Mocha color */
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
        }

            button[type="submit"]:hover {
                background-color: #7D5A53; /* Darker shade for hover effect */
            }
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Price</th>
                        <th>Quantity in Stock</th>
                        <th>Actions (to be implemented)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(model => item.Name)</td>
                            <td>@Html.DisplayFor(model => item.Description)</td>
                            <td>@Html.DisplayFor(model => item.Price)</td>
                            <td>@Html.DisplayFor(model => item.QuantityInStock)</td>

                            <!-- TODO: Attempt at adding button to take to each products details page, must complete!-->
                            <td>
                                <a href="/Products/ProductsInfo/@item.ProductId" class="btn" style="background-color: #4A312C; color: white; border: none; padding: 8px 16px; border-radius: 5px; cursor: pointer; text-decoration: none;">Details</a>
                                <a class="btn" asp-area="" asp-controller="Products" asp-action="ProductsInfo" asp-route-id="@item.ProductId" style="background-color: #4A312C; color: white; border: none; padding: 8px 16px; border-radius: 5px; cursor: pointer; text-decoration: none;">Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <form asp-controller="Product" asp-action="Details" method="get">
                <input type="text" name="searchString" placeholder="Search Products">
                <button type="submit">Search</button>
            </form>
        </div>
    </div>
</body>
</html>
