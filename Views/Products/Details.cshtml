@model ProductModel
@{
    ViewData["Title"] = "Product Details";
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/details.css">
</head>
<body>

    <div class="container">
        <h1>Product Details</h1>

        <img src="~/images/@(Model.GetNameNoSpace()).jpg" alt="Product Image" class="product-image">

        @if (Model != null)
        {
            <ul class="product-details">
                <li>Name: @Model.Name</li>
                <li>Description: @Model.Description</li>
                <li>Price: @Model.Price.ToString("C")</li>
                <li>Quantity In Stock: @Model.QuantityInStock</li>
            </ul>
            <div>

            </div>
            <!-- Fix this shit david pls-->
            <form method="post" action="/Cart/AddToCart">
                <input type="hidden" name="productId" value="@Model.ProductId" />
                <div class="quantity">
                    <input type="number" name="quantity" value="1" min="1" max="@Model.QuantityInStock" />
                </div>
                <div class="btn-custom">
                    <button type="submit">Add to Cart</button>
                </div>
            </form>



        }
        else
        {
            <p class="error-message">Product not found!</p>
        }
        <a href="/Products" class="btn-custom">Go Back To Products</a>
    </div>
</body>
</html>
